{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }

	},
	"include": ["src", "tests"],
	"exclude": ["node_modules"]
}