    "styled-components": "^5.3.3",
    "styled-icons": "^10.22.0",
    "styled-media-query": "^2.1.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-typescript": "^7.12.1",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/react": "6.2.9",
    "@testing-library/jest-dom": "^5.11.4",
